<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.magmatart.calculator.CalcActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:text="SY Calculator"
        android:singleLine="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:id="@+id/digit_screen"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:text="Test 0123456789"
        android:textColor="#9966FF"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal"
        android:rowCount="5"
        android:columnCount="4"
        android:id="@+id/grid">

        <Button android:text="7" android:textSize="20dp" android:id="@+id/btn_7"/>
        <Button android:text="8" android:textSize="20dp" android:id="@+id/btn_8"/>
        <Button android:text="9" android:textSize="20dp" android:id="@+id/btn_9"/>
        <Button android:text="/" android:textSize="23dp" android:id="@+id/btn_div"/>
        <Button android:text="4" android:textSize="20dp" android:id="@+id/btn_4"/>
        <Button android:text="5" android:textSize="20dp" android:id="@+id/btn_5"/>
        <Button android:text="6" android:textSize="20dp" android:id="@+id/btn_6"/>
        <Button android:text="*" android:textSize="23dp" android:id="@+id/btn_mul"/>
        <Button android:text="1" android:textSize="20dp" android:id="@+id/btn_1"/>
        <Button android:text="2" android:textSize="20dp" android:id="@+id/btn_2"/>
        <Button android:text="3" android:textSize="20dp" android:id="@+id/btn_3"/>
        <Button android:text="-" android:textSize="23dp" android:id="@+id/btn_sub"/>
        <Button android:text="(" android:textSize="23dp" android:id="@+id/btn_left"/>
        <Button android:text="0" android:textSize="20dp" android:id="@+id/btn_0"/>
        <Button android:text=")" android:textSize="23dp" android:id="@+id/btn_right"/>
        <Button android:text="+" android:textSize="23dp" android:id="@+id/btn_add"/>
        <Button
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal" android:text="=" android:textSize="23dp" android:id="@+id/btn_calc"/>
        <Button
            android:layout_column="3" android:text="^" android:textSize="23dp" android:id="@+id/btn_sqr"/>

    </GridLayout>

</LinearLayout>